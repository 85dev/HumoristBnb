<div class="h-96 bg-center bg-auto bg-cover " style="background-image: url(https://www.fnacspectacles.com/static_lotus/uploads/public/fscom/permanent/stars-stand-up.jpg)">
  <div class="w-full h-full">
  </div>
</div>

  <div class="-mt-72 mb-24 z-20">
    <div class="w-full text-center">
      <h1 class="font-bold text-5xl text-white">
          Louez vos talents préférés !
      </h1><br>
      <%= link_to "Ajoutez un talent", new_humorist_path, class: 'bg-blue-500 hover:bg-blue-700  mt-8 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
<div class="wrapper text-center">
  <h3 class="text-3xl text-gray-900 font-bold">Nos humoristes</h3>
  <div class="cols mt-8">
    <% @humorists.first(5).each do |humorist| %>
			<div class="col" ontouchstart="this.classList.toggle('hover');">
				<div class="container">
					<div class="front" style="background-image: url(https://unsplash.it/500/500/)">
						<div class="inner">
							<p><%= humorist.name %></p>
              <span>Humour <%= humorist.humor_type %></span>
						</div>
					</div>
					<div class="back">
						<div class="inner">
            <%= link_to "Decouvrez #{humorist.name}", humorist_path(humorist)%>
						</div>
					</div>
				</div>
			</div>
      <% end %>
		</div>
 </div>
