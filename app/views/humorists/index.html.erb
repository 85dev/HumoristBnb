<div class="flex space-between">
  <div class="flex-1">
    <% @humorists.each do |humorist| %>
      <div class="w-full flex justify-center items-center content-center bg-gray-800 rounded-lg border shadow-lg pb-6">
        <div class="p-4">
          <img src="https://source.unsplash.com/nqEJ548Hqjs/800x600" alt="image" class="w-64 object-cover object-center">
        </div>
        <div class="p-4 align-center">
          <p class="work-sans font-semibold text-xl text-white"><%= humorist.name %></p>
          <p class="raleway text-sm my-4 text-white opacity-75">Lorem ipsum dolor sit amet consectetur adipisicing elit. Exercitationem fuga odit repellendus vero iure alias accusamus ex sed facilis magni aperiam dicta obcaecati, possimus rerum, consequuntur deserunt aut dolor ipsa.</p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="flex-1">
    <div id="map"
      style="width: 100%; height: 89vh; position:fixed;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
